#include<stdio.h>
#include<stdlib.h>

void main()
{
	float  speed, time, distance;

	printf("\nPrograme to calculate speed\n");	

	printf("Enter the distance travelled in Miles :");
	scanf("%f",&distance);

	printf("\nEnter the time taken in Hours :");
	scanf("%f",&time);

	speed = distance/time;

	printf("\nThey travelled %f distance in %f time at the speed of %f mph\n\n\n",distance ,time ,speed);

}
